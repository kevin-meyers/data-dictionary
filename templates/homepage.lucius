@import url('https://fonts.googleapis.com/css2?family=Copse&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@300&display=swap');

li {
    line-height: 2em;
    font-size: 16px
    
}

body {
  background-color: #202328;
}

h1 {
  font-family: 'Copse', serif;
  color: #fff;
  font-size: 48px;

}
.subtext {
  color: #D1D1D1;
  font-family: 'Open Sans', sans-serif;
  font-size: 24px;

}

.right-card > h1 {
  color: #333333;
}

.right-card > p {
  color: #1F1F1F;
  font-size: 24px;
}

.left-card > h1 {
  color: #333333;
}

.left-card > p {
  color: #1F1F1F;
  font-size: 24px;
}

p {
  font-family: 'Open Sans', sans-serif;
}


.hero{
  position: absolute;
  width: auto;
  height: 108%;

	right: 0px;
	top: 10px;
	margin-left: -20px;
}

hr {
  border: 2px solid black;
  margin: 0 auto;
  border-radius: 10px;
  width: 12%;
  text-align: left;
  margin-left: 0;
}

.button {
  background-color: #16191D;
  border: none;
  color: white;
  padding: 15px 70px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  border-radius: 10px;
  font-family: 'Copse', serif;
}

.right-card {
  background-color: #D8D8D8;
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  border-radius: 10px;
  width: 40%;
  position: absolute;
  right: 5%;
  top: 125%;
}

.left-card {
  background-color: #D8D8D8;
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  border-radius: 10px;
  width: 40%;
  position: absolute;
  left: 5%;
  top: 190%;
  z-index: 6;
}

.inspector {
  position: absolute;
  top: 108%;
}

.subtext {
  width: 420px;
  line-height: 25px;
  font-size: 18px;
  padding-top: 15px;
  padding-bottom: 10px;

}
.landing-text {
  color: white;
  text-align: left;
  padding-left: 10%;
  padding-top: 12%;
}



.pricing-section {
  background-color: #1C1B1D;
  width: 100%;
  height: 100%;
  top: 250%;
  position: absolute;
  z-index: 1;
}

.oval1 {
  width: 40%;
  height: 200px;
  background-color: #202328;
  border-radius: 50%;
  position: absolute;
  top: 240%;
  z-index: 5;
}
.oval2 {
  width: 100%;
  height: 320px;
  background-color: #202328;
  border-radius: 50%;
  position: absolute;
  top: 240%;
  left: 30%;
  z-index: 4;
}

